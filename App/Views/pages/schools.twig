{% extends "base.twig" %}

{% block content %}
<div class="crud-form">
    <h2>Gerenciar Escolas</h2>
    <form method="POST" action="/schools/save">
        <div>
            <label for="name">Nome:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="address">Endereço:</label>
            <textarea id="address" name="address" required></textarea>
        </div>
        <div>
            <label for="region_code">Código da Região:</label>
            <input type="number" id="region_code" name="region_code">
        </div>
        <div>
            <label for="phone">Telefone:</label>
            <input type="text" id="phone" name="phone">
        </div>
        <div>
            <label for="sae_name">Nome no SAE:</label>
            <input type="text" id="sae_name" name="sae_name" required>
        </div>
        <div>
            <label for="period">Período:</label>
            <select id="period" name="period">
                <option value="EF1">EF1</option>
                <option value="EF2">EF2</option>
                <option value="EF1/EF2">EF1/EF2</option>
            </select>
        </div>
        <div>
            <label for="eja_modality">EJA:</label>
            <input type="checkbox" id="eja_modality" name="eja_modality" value="1">
        </div>
        <div>
            <label for="inep_code">Código INEP:</label>
            <input type="text" id="inep_code" name="inep_code">
        </div>
        <div class="crud-buttons">
            <button type="submit">Salvar</button>
            <button type="button" onclick="window.history.back()">Voltar</button>
        </div>
    </form>
</div>
{% endblock %}
